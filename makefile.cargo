VP8_DECODER_SRC = \
	$(addprefix vp8/,\
		vp8_dx_iface.c \
	) \
	$(addprefix vp8/decoder/,\
		dboolhuff.c \
		decodemv.c \
		decodeframe.c \
		detokenize.c \
		onyxd_if.c \
	)

VPX_MEM_SRC = \
	$(addprefix vpx_mem/,\
		vpx_mem.c \
		vpx_mem_tracker.c)

VPX_PORTS_ASM = \
	$(addprefix vpx_ports/,\
		emms.asm)

VPX_SCALE_SRC = \
	$(addprefix vpx_scale/, \
		vpx_scale_rtcd.c) \
	$(addprefix vpx_scale/generic/,\
		gen_scalers.c \
		vpx_scale.c \
